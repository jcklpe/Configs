  //- Token Color customizations
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      //Json Layers theming
      {
        "name": "JSON Value - Level 0",
        "scope": [
          "source.json meta.structure.dictionary.json string.quoted.double.json"
        ],
        "settings": {
          "foreground": "#e4fd53"
        }
      },
      {
        "name": "JSON value - Level 1",
        "scope": [
          "source.json meta.structure.dictionary.json meta.structure.dictionary.value.json meta.structure.dictionary.json string.quoted.double.json"
        ],
        "settings": {
          "foreground": "#ff9c55"
        }
      },
      {
        "name": "JSON value - Level 2",
        "scope": [
          "source.json meta.structure.dictionary.json meta.structure.dictionary.value.json meta.structure.dictionary.json meta.structure.dictionary.value.json meta.structure.dictionary.json string.quoted.double.json"
        ],
        "settings": {
          "foreground": "#ff6f5c"
        }
      },
      {
        "name": "JSON Key - Level 0",
        "scope": [
          "source.json meta.structure.dictionary.json support.type.property-name.json"
        ],
        "settings": {
          "foreground": "#009c87",
          "fontStyle": "bold"
        }
      },
      {
        "name": "JSON Key - Level 1",
        "scope": [
          "source.json meta.structure.dictionary.json meta.structure.dictionary.value.json meta.structure.dictionary.json support.type.property-name.json"
        ],
        "settings": {
          "foreground": "#1cf08d",
          "fontStyle": "bold"
        }
      },
      {
        "name": "JSON value - Level 2",
        "scope": [
          "source.json meta.structure.dictionary.json meta.structure.dictionary.value.json meta.structure.dictionary.json meta.structure.dictionary.value.json meta.structure.dictionary.json support.type.property-name.json"
        ],
        "settings": {
          "foreground": "#85ff67",
          "fontStyle": "bold"
        }
      },
      //CSS selectors
      {
        "name": "CSS selectors",
        "scope": [
          "source.css.scss entity.other.attribute-name.class.css punctuation.definition.entity.css",
          "source.css.scss entity.other.attribute-name.class.css"
        ],
        "settings": {
          "foreground": "#ff1677",
          "fontStyle": "bold"
        }
      },
      //CSS property values
      {
        "name": "CSS property values",
        "scope": [
          "source.css.scss meta.property-list.scss meta.property-list.scss meta.property-list.scss meta.property-value.scss support.constant.property-value.css"
        ],
        "settings": {
          "foreground": "#ffe867"
        }
      },
      //SCSS property value levels
      {
        "name": "SCSS property Level1",
        "scope": [
          "support.type.property-name.css meta.property-name.scss meta.property-list.scss source.css.scss",
          "support.type.property-name.css",
          "source.css.scss meta.property-list.scss meta.property-list.scss meta.property-list.scss meta.property-name.scss support.type.property-name.css"
        ],
        "settings": {
          "foreground": "#6790ff",
          "fontStyle": "bold"
        }
      },
      {
        "name": "CSS ID",
        "scope": [
          "source.css.scss meta.property-list.scss meta.property-list.scss meta.property-list.scss entity.other.attribute-name.id.css"
        ],
        "settings": {
          "foreground": "#ff677b",
          "fontStyle": "bold"
        }
      },
      // Webpack stuff
      {
        "name": "WebPack property ide",
        "scope": [
          "source.js meta.objectliteral.js meta.object.member.js meta.object-literal.key.js"
        ],
        "settings": {
          "foreground": "#ff677b"
        }
      },
      {
        "name": "WebPack property ide level 2",
        "scope": [
          "source.js meta.objectliteral.js meta.object.member.js meta.objectliteral.js meta.object.member.js meta.object-literal.key.js"
        ],
        "settings": {
          "foreground": "#ff67d9"
        }
      },
      // Javascript punctuation
      {
        "name": "JS semicolons",
        "scope": [
          "punctuation.terminator.statement.js",
          "punctuation.terminator.rule.css",
          "punctuation.terminator.expression.php"
        ],
        "settings": {
          "foreground": "#ff6f5c"
        }
      },
      {
        "name": ". in between functions/variables",
        "scope": [
          "punctuation.accessor.js",
          "punctuation.definition.variable.php"
        ],
        "settings": {
          "foreground": "#ff6f5c"
        }
      },
      {
        "name": "quotation marks",
        "scope": [
          "punctuation.definition.string.begin.js",
          "punctuation.definition.string.end.js",
          "punctuation.definition.string.begin.scss",
          "punctuation.definition.string.end.scss",
          "punctuation.definition.string.begin.html",
          "punctuation.definition.string.end.html",
          "punctuation.definition.string.begin.php",
          "punctuation.definition.string.end.php"
        ],
        "settings": {
          "foreground": "#9fb30e"
        }
      },
      {
        "name": "commas",
        "scope": ["punctuation.separator.comma.js"],
        "settings": {
          "foreground": "#e2da4b"
        }
      },
      {
        "name": "array brackets",
        "scope": ["meta.array.literal.js meta.brace.square.js "],
        "settings": {
          "foreground": "#e2da4b"
        }
      },
      {
        "name": "equals sign for assigning variables",
        "scope": ["keyword.operator.assignment.js"],
        "settings": {
          "foreground": "#ffa342"
        }
      },
      //- HTML
      {
        "name": "equals sign for assigning variables",
        "scope": ["punctuation.separator.key-value.html"],
        "settings": {
          "foreground": "#ffa342"
        }
      },
      {
        "name": "ending html tag",
        "scope": ["punctuation.definition.tag.end.html"],
        "settings": {
          "foreground": "#D44040"
        }
      },
      {
        "name": "comparison sign",
        "scope": ["keyword.operator.comparison.js"],
        "settings": {
          "foreground": "#ffa342"
        }
      },
      // fix missing array functions
      {
        "name": "array function",
        "scope": ["support.variable.property.js"],
        "settings": {
          "foreground": "#ff677b"
        }
      },
      {
        "name": "variable being used with a function",
        "scope": ["support.variable.property.js"],
        "settings": {
          "foreground": "#e94e8d"
        }
      },
      {
        "name": "operators",
        "scope": ["keyword.operator.arithmetic.js"],
        "settings": {
          "foreground": "#ffa342"
        }
      }
    ]
  },
